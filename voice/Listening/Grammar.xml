<?xml version="1.0" encoding="utf-8" ?>
<grammar xml:lang="en-US" xmlns="http://www.w3.org/2001/06/grammar"
          version="1.0" root="question">
  <rule id="question">
    <item> Agent Bond </item>
    <item>
      is
    </item>
    <ruleref uri="#names"/>
    <ruleref uri="#restOfSentence"/>
  </rule>

  <rule id="names" scope="public">
    <one-of>
      <item> Bobby </item>
      <item> Jimmy </item>
      <item> Terry </item>
      <item> Arthur </item>
    </one-of>
  </rule>

  <rule id="traits" scope="public">
    <one-of>
      <item> blue </item>
      <item> white </item>
      <item> soft </item>
      <item> blinking </item>
      <item> red </item>
      <item> happy </item>
      <item> playing </item>
      <item> eating </item>
      <item> dirty </item>
      <item> yellow </item>
      <item> round </item>
      <item> square </item>
      <item> striped </item>
    </one-of>
  </rule>

  <rule id="restOfSentence" scope="public">
    <item repeat="0-1">
      <item> either </item>
    </item>
    <item repeat="0-1">
      <item> not </item>
    </item>
    <ruleref uri="#traits"/>
    <item repeat="0-1">
      <one-of>
        <item> and </item>
        <item> or </item>
      </one-of>
      <item repeat="0-1">
        <item> not </item>
      </item>
      <ruleref uri="#traits"/>
    </item>
  </rule>

  <rule id="context" scope="public">
    <item repeat="0-1">
      <item> if </item>
      <one-of>
        <item> Latest Focused Filtering Context </item>
        <item> Latest Group Filtering Context </item>
        <item> Latest Filtering Context </item>
        <item> Default Context </item>
      </one-of>
      <item> is used </item>
      <item repeat="0-1">
        <item> when it is </item>
        <ruleref uri="#restOfSentence"/>
      </item>
      <item repeat="0-1">
        <ruleref uri="#measures"/>
      </item>
    </item>
  </rule>

  <rule id="measures" scope="public">
    <item> with </item>
    <one-of>
      <item> distance </item>
      <item> focused distance </item>
      <item> default measure </item>
    </one-of>
  </rule>

</grammar>

